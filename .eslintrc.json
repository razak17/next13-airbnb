{
	"$schema": "https://json.schemastore.org/eslintrc",
	"root": true,
	"extends": [
		"next",
		"next/core-web-vitals",
		"prettier",
		"eslint:recommended",
		"plugin:tailwindcss/recommended"
	],
	"plugins": ["tailwindcss"],
	"rules": {
		"semi": 1,
		"@next/next/no-html-link-for-pages": "off",
		"tailwindcss/no-custom-classname": "off",
		"tailwindcss/classnames-order": "error",
		"no-unused-vars": [
			1,
			{
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		],
		"quotes": [1, "single"],
		"max-len": [
			1,
			{
				"code": 120
			}
		],
		"object-curly-spacing": [1, "always"],
    "no-console": 1,
    "no-debugger": 1,
    "no-alert": 1,
    "no-await-in-loop": 1,
    "no-return-assign": 1
	},
	"settings": {
		"tailwindcss": {
			"callees": ["cn"],
			"config": "tailwind.config.js"
		},
		"next": {
			"rootDir": true
		}
	},
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parser": "@typescript-eslint/parser"
		}
	]
}
